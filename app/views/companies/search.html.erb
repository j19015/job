<div >
    <div class="p-5">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div  class="col-md-12">
                    <div class="col-md-12">
                        <div class="text-center text-light">
                            <h1>企業選択ページ</h1>
                            <hr/>
                            <% if @company.nil? %>
                                <%= form_with url:company_search_path ,local:true do |f| %>
                                    <%= f.text_field :name ,class:"rounded-pill",:size=>"60"%>
 
                                    <%= button_tag type: 'submit' do %><i class="fa fa-search"></i><% end %>
                                <% end %>
                            <% else %>
                                <div>
                                    <ul class="list-group">
                                        <li class="list-group-item bg-secondary text-white spc2 pr-0" style="display:flex"><div></div><div><h3>企業検索一覧</h1></div><div><%= link_to "再検索",companies_path ,class:"btn btn-light btn-lg" %></div></li>
                                            <% @company.each do |list| %>
                                                <li class="list-group-item text-dark pr-0">
                                                    <div class="spc2">
                                                        <div></div>
                                                        <div>
                                                            <%= link_to company_path(list.id) do %> 
                                                                    <%= list.name %>
                                                            <% end %>
                                                        </div>
                                                        <div>
                                                            <% if current_user.user_id=="root" %>
                                                                <%= link_to '削除', company_path(list.id),class:"btn btn-danger", method: :delete,data: {confirm: "削除しますか？"} %>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </li>
                                                
                                            <% end %>
                                        <li class="list-group-item"><%= paginate @company %></li>
                                    </ul>
                                </div>
                                
                            <% end %>
                            
                            <div class="mt-5">
                                <%=  link_to "企業新規登録",new_company_path ,class:"btn btn-light" %>
                                
                                
                                <%= link_to "TOP画面へ戻る",home_about_path,class:"btn btn-light ml-5" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>