<div >
    <div class="p-5">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div  class="col-md-12">
                    <div class="col-md-12">
                        <div class="text-center text-light">
                            <h1 class="f_h1">企業選択ページ</h1>
                            <hr/>
                            
                            <% if @company.nil? %>
                                <%= form_with url:company_search_path ,local:true do |f| %>
                                    <%= f.text_field :name ,class:"rounded-pill",:size=>"60"%>
 
                                    <%= button_tag type: 'submit' do %><i class="fa fa-search"></i><% end %>
                                <% end %>
                                
                            <% else %>
                                <div>
                                    <ul class="list-group">
                                        <li class="list-group-item bg-secondary text-white spc2 pr-0" style="display:flex">
                                            <div>
                                                
                                            </div>
                                            <div>
                                                <h1 class="h_3">企業検索一覧</h1>
                                            </div>
                                            <div>
                                                <%= link_to companies_path ,class:"btn2 btn2-primary btn2-sm" do %><span class="h_4">再検索</span><% end %>
                                            </div>
                                        </li>
                                            <% @company.each do |list| %>
                                                <li class="list-group-item text-dark pr-0">
                                                    <div class="spc2">
                                                        <div></div>
                                                        <div class="hami2">
                                                            <%= link_to company_path(list.id) do %> 
                                                                    <span class="hami2 mini"><%= list.name %></span>
                                                            <% end %>
                                                        </div>
                                                        <div>
                                                            <% if current_user.user_id=="root" %>
                                                                <%= link_to '削除', company_path(list.id),class:"btn2 btn2-danger btn2-sm mini", method: :delete,data: {confirm: "削除しますか？"} %>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </li>
                                                
                                            <% end %>
                                        <li class="list-group-item"><%= paginate @company %></li>
                                    </ul>
                                </div>
                                
                            <% end %>
                            
                            <div class="mt-5">
                                <div><%=  link_to "企業新規登録",new_company_path ,class:"btn btn-light" %> </div>
                                
                                
                                <div><%= link_to "戻る",home_about_path,class:"btn btn-light mt-5",data: {"turbolinks" => false} %> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>