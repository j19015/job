<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<body>
    <div id="login" class="pb-5" style="height:700px">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12 circle2 pt-2">
                       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          <h3 class="text-center text-info">ログイン</h3>
                          <div class="form-group">
                            <label for="username" class="text-info">ユーザID:</label><br>
                            <%= f.text_field :user_id, autofocus: true, class: "form-control" %>
                          </div>
                        
                          <div class="form-group">
                            <label for="password" class="text-info">パスワード:</label><br>
                            <%= f.password_field :password, class: "form-control"  %>
                          </div>
                        
                          <% if devise_mapping.rememberable? %>
                            <div class="form-group">
                              <label for="remember-me" class="text-info"><span>パスワードを覚える</span> <span> <%= f.check_box :remember_me,class:"remember-me" %></span></label><br>
                            </div>
                          <% end %>
                        
                          <div class="actions">
                            <%= f.submit "ログイン", class:"btn btn-info btn-md" %>
                          </div>
                        <% end %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>